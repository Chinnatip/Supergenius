<div class="admin-block">
  <p id="notice"><%= notice %></p>

  <h1>
    Seats
    <%= link_to 'New Seat', new_seat_path , class: 'btn-ner'%>
  </h1>

  <table>
    <thead>
      <tr>
        <th>Classroom</th>
        <th>Student</th>
        <th>Status</th>
        <th>Checkin</th>
        <th>Valuate</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @seats.each do |seat| %>
        <tr>
          <td><%= seat.classroom %></td>
          <td><%= seat.student %></td>
          <td><%= seat.status %></td>
          <td><%= seat.checkin %></td>
          <td><%= seat.valuate %></td>
          <td><%= link_to 'Show', seat %></td>
          <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
          <td><%= link_to 'Destroy', seat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

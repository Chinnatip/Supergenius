<div class="admin-block">
  <p id="notice"><%= notice %></p>

  <h1>
    Schools
    <%= link_to 'New School', new_school_path , class: 'btn-ner'%>
  </h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Student</th>
        <th>Graduated</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @schools.each do |school| %>
        <tr>
          <td><%= school.name %></td>
          <td><%= school.student %></td>
          <td><%= school.graduated %></td>
          <td><%= link_to 'Show', school %></td>
          <td><%= link_to 'Edit', edit_school_path(school) %></td>
          <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

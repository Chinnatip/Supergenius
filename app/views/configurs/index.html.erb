<p id="notice"><%= notice %></p>

<h1>Configurs</h1>

<table>
  <thead>
    <tr>
      <th>Top contact</th>
      <th>Company name</th>
      <th>Contact info</th>
      <th>Home slider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @configurs.each do |configur| %>
      <tr>
        <td><%= configur.top_contact %></td>
        <td><%= configur.company_name %></td>
        <td><%= configur.contact_info %></td>
        <td><%= configur.home_slider %></td>
        <td><%= link_to 'Show', configur %></td>
        <td><%= link_to 'Edit', edit_configur_path(configur) %></td>
        <td><%= link_to 'Destroy', configur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= form_for(semester) do |f| %>
  <% if semester.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(semester.errors.count, "error") %> prohibited this semester from being saved:</h2>

      <ul>
      <% semester.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <!-- <%= f.label :name %> -->
    <label for="name">ชื่อเทอม</label>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <label for="sem_index">ภาคการศึกษาที่</label>
    <!-- <%= f.number_field :sem_index %> -->
    <select class="" name="semester[sem_index]">
      <% 1..11.times do |c|%>
        <% if c > 0 %>
          <option value="<%= c %>"
            <% if semester[:sem_index].to_i == c %>selected<% end %>
            >
            <%= c %>
          </option>
        <% end %>
      <% end %>
    </select>
  </div>

  <div class="field">
    <!-- <%= f.label :year %> -->
    <label for="year">ปีการศึกษา</label>
    <!-- <%= f.number_field :year %> -->
    <select class="" name="semester[year]">
      <% year_range = 2560..(2560+20) %>
      <% year_range.each do |s|%>
        <option value="<%= s %>"
          <% if semester[:year] == s %>selected<% end %>
          >
          <%= s %>
        </option>
      <% end %>
    </select>

  </div>

  <div class="field">
    <!-- <%= f.label :description %> -->
    <label for="description">รายละเอียด</label>
    <%= f.text_area :description , class: 'textarea-for-sub-content'%>
  </div>

  <!-- <div class="field">
    <%= f.label :course_count %>
    <%= f.number_field :course_count %>
  </div> -->

  <br>
  <div class="actions">
    <%= link_to 'Back', semesters_path , class: 'btn btn-grey' %>
    <span class="mar-10"></span>

    <% if controller.action_name == 'edit' %>
      <%= link_to 'Show', @semester ,class: 'btn-grey'%>
      <span class="mar-10"></span>
    <% end %>

    <input type="submit" value="Submit" class="btn btn-redder">
  </div>

<% end %>

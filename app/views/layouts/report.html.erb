  <body class="admin-body">
    <!-- header ><-->
    <div id="cHeader">
      <div class="banner-top"> Tel. 0897606279 (พี่วิน) , 085-334-8815 (พี่ป๊อป)|windz_bs@hotmail.com </div>
      <section class="hero _fixed_top" :class="[body.theme,body.size]">
        <nav-bar
          :nav="nav"
          :body="body"
          :login="login"
          :role="checkRole"
          active="report"
          user="<%= current_user[:name] rescue '' %>"
          ></nav-bar>
      </section>
    </div>

    <!-- body -->
    <div class="course_path __content">
      <div class="__content_padding _report_content">
        <%= yield %>
      </div>
    </div>

    <!-- footer -->
    <div id="cFooter">
      <footer-site-corp :footer="footer"></footer-site-corp>
    </div>

    <!-- Include JAVASCRIPT here ><-->
    <script src="/js/body.js"></script>
    <script src="/js/ribbon.js"></script>
    <script src="/js/slider.js"></script>
    <script src="/js/footer_site.js"></script>
    <script type="text/javascript">
    $( document ).ready(function() {
    });

      //component of header
      var header = new Vue({
        el: '#cHeader',
        computed:{
          checkRole: function(){
            if (this.login) {
              return '<%= current_user.role rescue '' %>' ;
            }
          }
        },
        data: {
          url_action: '<%= controller.action_name %>' ,
          url_controller: '<%= controller.controller_name %>' ,
          login: <%= user_signed_in? %>,
          body: {
            theme: 'is-info',
            size:  'is-medium',
            url:  ''
          },
          choice: 'tab1',
          nav: {
            brand: '/img_ref/sup_01.png',
            brandLink: "<%= root_path %>",
            links: [
              {
                title: 'หน้าหลัก',
                controller: 'index',
                link: '<%= root_path %>',
                target: ''
              },{
                title: 'คอร์สเรียน',
                controller: 'course',
                link: "<%= home_course_path %>",
                target: ''
              },{
                title: 'เช็คผลการเรียน',

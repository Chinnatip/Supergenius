                link: "<%= report_index_path %>",
                target: ''
              },{
                title: 'ข่าวเเละกิจกรรม',
                controller: 'news',
                link: "<%= home_news_path %>",
                target: ''
              },{
                title: 'ติดต่อเรา',
                controller: 'contact',
                link: "<%= home_contact_path %>",
                target: ''
              }
            ],
            backLink: {
              title: 'Dashboard',
              icon: 'fa-commenting-o',
              link: '<%= dashboard_index_path %>'
            },
            login: {
              icon: 'fa-sign-in'
            },
            logout: {
              icon: 'fa-sign-out'
            }
          }
        }
      });

      //component of footer
      var comp = new Vue({
        el: '#cFooter',
        data: {
          footer:{
            contacts:[
              {icon: 'fa-facebook-official' , url: '#'},
              {icon: 'fa-envelope' , url: '#'},
              {icon: 'fa-phone-square' , url: '#'}

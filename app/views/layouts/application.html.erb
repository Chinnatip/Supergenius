<!DOCTYPE html>
<html>
  <head>
    <title>Super Genius</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body class="admin-body">
    <!-- header ><-->
    <div id="cHeader">
      <section class="hero _fixed_top" :class="[body.theme,body.size]" :style="{ background: 'url(' + body.background + ') no-repeat center center' , backgroundSize: 'cover' }">
        <nav-bar
          :nav="nav"
          :body="body"
          :login="login"
          :role="checkRole"
          ></nav-bar>
      </section>
    </div>

    <div id="gap-baker" class="top-60"></div>
    <div class="admin-container">
      <div class="sidebar" id="sidebar">
        <div class="sidebar-container">
          <a v-for="li in lists" :href="li.link" class="item">{{li.text}}</a>
        </div>
      </div>
      <div class="main-container">
        <%= yield %>
      </div>
    </div>


    <!-- footer ><-->
    <div id="cFooter">
      <footer-site-corp :footer="footer"></footer-site-corp>
    </div>

    <!-- Include JAVASCRIPT here ><-->
    <script src="/js/body.js"></script>
    <script src="/js/ribbon.js"></script>
    <script src="/js/slider.js"></script>
    <script src="/js/footer.js"></script>
    <script type="text/javascript">
    $( document ).ready(function() {
    });

      //component of header
      var header = new Vue({
        el: '#cHeader',
        computed:{
          checkRole: function(){
            if (this.login) {
              return '<%= current_user.role rescue '' %>' ;
            }
          }
        },
        data: {
          url_action: '<%= controller.action_name %>' ,
          url_controller: '<%= controller.controller_name %>' ,
          login: <%= user_signed_in? %>,
          body: {
            theme: 'is-info',
            background: '/img_ref/bg_blue.jpg',
            size:  'is-medium',
            title: 'นักลงทุนสัมพันธ์',

            links: [],
            backLink: {
              title: 'Dashboard',
              icon: 'fa-commenting-o',
              link: '<%= dashboard_index_path %>'
            },
            login: {
              icon: 'fa-sign-in'
            },
            logout: {
              icon: 'fa-sign-out'
            }
          }
        }
      });

      var sidebar = new Vue({
        el: '#sidebar',
        data: {
          lists: [
            { text: 'Dashboard'  , link: 'head' },
            { text: 'หน้าหลัก'     , link: '<%= dashboard_index_path %>'  , active: 'index', },
            { text: 'ข่าวสารองค์กร', link: '<%= newsfeeds_path %>'        , active: 'news', },
            { text: 'ผู้บริหาร'     , link: '<%= boards_path %>'           , active: 'board', },
            { text: 'รายชื่อนักวิเคราะห์'  , link: '<%= analysts_path %>'    , active: 'analyst', },
            { text: 'ผลิตภัณฑ์'     , link: '<%= products_path %>', active: 'product', }
          ],
        }
      });

      //component of footer
      var comp = new Vue({
        el: '#cFooter',
        data: {
          footer:{
            contacts:[
              {icon: 'fa-facebook-official' , url: '#'},
              {icon: 'fa-envelope' , url: '#'},
              {icon: 'fa-phone-square' , url: '#'}
            ],
            languages: [
              {native: 'THAI' , url: '#'},
              {native: 'ENGLISH' , url: '#'}

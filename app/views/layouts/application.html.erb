<!DOCTYPE html>
<html>
  <head>
    <title>Super Genius</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body class="admin-body">
    <!-- header ><-->
    <div id="cHeader">
      <section class="hero _fixed_top" :class="[body.theme,body.size]" :style="{ background: 'url(' + body.background + ') no-repeat center center' , backgroundSize: 'cover' }">
        <nav-bar
          :nav="nav"
          :body="body"
          :login="login"
          :role="checkRole"
          user="<%= current_user[:name] rescue '' %>"
          ></nav-bar>
      </section>
    </div>

    <section class="is-fullheight _dashboard">
      <div class="__sidebar" id="sidebar">
        <ul v-for=" ul in lists">
          <li v-for="li in ul">
            <a v-if="li.head == 'head'" class="_head" >{{li.text}}</a>
            <a v-else :href="li.link" :class=" isActive(li.active) " >{{li.text}}</a>
          </li>
        </ul>
      </div>
      <div class="__content">
        <div class="__content_padding">
          <%= yield %>
        </div>
      </div>
      <div class="__content_footer"> Copyright, Super Genius school.co.ltd @2017</div>

    </section>

    <!-- Include JAVASCRIPT here ><-->
    <script src="/js/body.js"></script>
    <script src="/js/ribbon.js"></script>
    <script src="/js/slider.js"></script>
    <script src="/js/footer.js"></script>
    <script type="text/javascript">
    $( document ).ready(function() {
    });

      //component of header
      var header = new Vue({
        el: '#cHeader',
        computed:{
          checkRole: function(){
            if (this.login) {
              return '<%= current_user.role rescue '' %>' ;
            }
          }
        },
        data: {
          url_action: '<%= controller.action_name %>' ,
          url_controller: '<%= controller.controller_name %>' ,
          login: <%= user_signed_in? %>,
          body: {
            theme: 'is-info',
            background: '/img_ref/bg_blue.jpg',
            size:  'is-medium',
            title: 'นักลงทุนสัมพันธ์',
            sub:   'Public Company Limited มุ่งมั่นที่จะเป็นบริษัทอสังหาริมทรัพย์ชั้นนำของประเทศไทย ที่มีธุรกิจและบริการที่หลากหลายเพื่อตอบสนองรูปแบบการดำเนินชีวิตสมัยใหม่ และสามารถตอบโจทย์ความต้องการของลูกค้าได้อย่างครบถ้วน',
            link: 'นักลงทุนสัมพันธ์',
            url:  ''
          },
          sliders: [
            {
              title: 'บริษัท พฤกษา โฮลดิ้ง จำกัด (มหาชน)',
              subtitle: 'PCL มุ่งมั่นที่จะเป็นบริษัทอสังหาริมทรัพย์ชั้นนำของประเทศไทย ที่มีธุรกิจและบริการที่หลากหลายเพื่อตอบสนองรูปแบบการดำเนินชีวิตสมัยใหม่ และสามารถตอบโจทย์ทุกความต้องการของลูกค้าได้อย่างครบถ้วน',
              tab: 'tab1'
            },
            {
              title: 'Hey this is SECOND TAB',
              subtitle: 'are you ok with this ?',
              tab: 'tab2'
            },
            {
              title: 'I beleive I can fly',
              subtitle: 'Osmosis ',
              tab: 'tab3'
            },
          ],
          slider: false ,
          choice: 'tab1',
          nav: {
            brand: '/img_ref/sup_01.png',
            brandLink: "<%= page_about_path %>#navbar",
            links: [],
            backLink: {
              title: 'Dashboard',
              icon: 'fa-commenting-o',
              link: '<%= dashboard_index_path %>'
            },
            login: {
              icon: 'fa-sign-in'
            },
            logout: {
              icon: 'fa-sign-out'
            }
          }
        }
      });

      var side = new Vue({
        el: '#sidebar',
        data: {
          url_control: '<%= controller.controller_name %>' ,
          url_action: '<%= controller.action_name %>' ,
          url_active: '<%= @active %>',
          lists: [
            [
              { text: 'Admin page'  , link: '' , head: 'head' },
              { text: 'หน้าหลัก'     , link: '<%= dashboard_index_path %>'  , active: 'dashboard', },
              { text: 'คอร์สเรียน' , link: '<%= courses_path %>'  , active: 'courses', },
              { text: 'ชั้นเรียน' , link: '<%= classrooms_path %>'  , active: 'classrooms', },
              { text: 'รายชื่อนักเรียน' , link: '<%= students_path %>'  , active: 'students', },
              { text: 'รายชื่อโรงเรียน' , link: '<%= schools_path %>'  , active: 'schools', },
              { text: 'รายชื่อครู' , link: '<%= teachers_path %>'  , active: 'teachers', },
              { text: 'ข่าวสารโรงเรียน', link: '<%= newsfeeds_path %>'        , active: 'newsfeeds', },
            ]
          ],
        },
        methods: {
          isActive: function( val ){
            if (val == this.url_control) {
              return 'active'
            }
          }
        }
      });

      //component of footer
      var comp = new Vue({
        el: '#cFooter',
        data: {
          footer:{
            contacts:[
              {icon: 'fa-facebook-official' , url: '#'},
              {icon: 'fa-envelope' , url: '#'},
              {icon: 'fa-phone-square' , url: '#'}
            ],
            languages: [
              {native: 'THAI' , url: '#'},
              {native: 'ENGLISH' , url: '#'}
            ],
            sites: [
              {
                //first list
                head : 'First list',
                lists:[
                  { content: 'click me', url: '#' },
                  { content: 'click me', url: '#' },
                  { content: 'click me', url: '#' }
                ]
              },{
                //second list
                head : 'Second list',
                lists:[
                  { content: 'click me', url: '#' },
                  { content: 'click me', url: '#' },
                ]
              },{
                //third list
                head : 'Last list',
                lists:[
                  { content: 'click me', url: '#' },
                ]
              }
            ]
          }
        }
      });
    </script>
  </body>
</html>

<div id="app">
  <div :style="{height: '40px'}"></div>
  <div class="container _main_cupboard">
    <div class="_side __320px">
      <h1>COMPANY TIMELINE</h1>
      <ul class="_timeline">
        <li v-for="t in timelines">
          <span class="_img_comp"><img :src="t.img" alt=""></span>
          <span class="_content">
            <p class="__year">{{t.year}}</p>
            <p class="__title">{{t.title}}</p>
          </span>
        </li>
      </ul>

    </div>
    <div class="_main">
      <blog-jumbo :data="history"></blog-jumbo>
      <br>
      <div
        class="_testimo_player"
        :style="{ background: 'url(' + player.bg + ') no-repeat center center' , backgroundSize: 'cover' }"
      >
        <h1 class="">{{player.title}}</h1>
        <a :href="player.url">
          <img :src="player.icon">
          {{player.text}}
        </a>
      </div>

      <br>
      <div :style="{height: '40px'}"></div>

      <ul class="_invoker">
        <li v-for="i in invokes">
          <img :src="i.img" alt="">
          <span>
            <p class="title">{{i.title}}</p>
            <p class="text">{{i.text}}</p>
          </span>
        </li>
      </ul>
    </div>
  </div>
</div>


<%= form_for(board) do |f| %>
  <% if board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
      <% board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name  , 'ชื่อ - นามสกุล' , class: 'label' %>
    <p class="control">
      <%= f.text_field :name , class: 'input' %>
    </p>
  </div>

  <div class="field">
    <%= f.label :stock , 'จำนวนหุ้น (บาท)' , class: 'label' %>
    <p class="control">
      <%= f.number_field :stock , class: 'input' %>
    </p>
  </div>

  <div class="actions">
    <%= f.submit 'ส่งข้อความ' , :class => 'button _ready' %>
  </div>
<% end %>

<div class="admin-block">
  <p id="notice"><%= notice %></p>

  <h1>
    โปรแกรมการสอน
    <%= link_to 'สร้างโปรแกรมใหม่', new_school_program_path ,class: 'btn-ner'%>
  </h1>

  <table>
    <thead>
      <tr>
        <th>ชื่อโปรแกรม</th>
        <th>รหัสโปรแกรม</th>
        <th>รายละเอียด</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @school_programs.each do |school_program| %>
        <tr>
          <td><%= school_program.name %></td>
          <td><%= school_program.code %></td>
          <td><%= school_program.content %></td>
          <td>
            <%= link_to 'รายละเอียด', edit_school_program_path(school_program) ,class: 'btn-redder'  %>
            <%= link_to 'ลบทิ้ง', school_program, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-grey' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

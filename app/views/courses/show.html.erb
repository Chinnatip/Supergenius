<div class="admin-block">
  <p id="notice"><%= notice %></p>

  <h1>
    คอร์สเรียน
    <span style="float: right;font-size: 20px;">
      <%= link_to 'Edit', edit_course_path(@course) , class: 'btn-ner'%>
      <%= link_to 'Back', courses_path , class: 'btn-ner'%>
    </span>
  </h1>

  <div class="show-container">
    <p>
      <strong>Name:</strong>
      <%= @course.name %>
    </p>

    <p>
      <strong>Major:</strong>
      <%= @course.major %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @course.price %>
    </p>

    <p>
      <strong>Grade:</strong>
      <%= @course.grade %>
    </p>

    <p>
      <strong>Seat:</strong>
      <%= @course.seat %>
    </p>
  </div>
</div>

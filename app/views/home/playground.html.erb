<section class="section is-medium">
  <div class="level">
    <div class="level-item has-text-centered">
      <p class="heading">EXAMPLE1</p>
      <p class="title">
        <span id="app-1">{{message}}</span>
      </p>
    </div>
    <div class="level-item has-text-centered">
      <p class="heading">EXAMPLE2</p>
      <p class="title">
        <span id="app-2">{{message}}</span>
      </p>
    </div>
    <div class="level-item has-text-centered">
      <p class="heading">EXAMPLE3</p>
      <p class="title" id="app-3">
        <span v-if="seen">{{message}}</span>
      </p>
    </div>
  </div>

  <div class="level" id="app-4">
    <div class="level-item has-text-centered" v-for="todo in todos">
      <p class="heading">{{todo.header}}</p>
      <p class="title">{{todo.text}}</p>
    </div>
  </div>

  <div class="level">
    <div id="app-5" class="level-item has-text-centered">
      <p class="heading">{{message}}</p>
      <p class="title">
        <button v-on:click="reverseText" type="button">Reverse Text</button>
      </p>
    </div>
    <div id="app-6" class="level-item has-text-centered">
      <p class="heading">{{message}}</p>
      <p class="title">
        <input v-model="message" type="text">
      </p>
    </div>
    <div id="app-7" class="level-item has-text-centered">
      <p class="heading">EXAMPLE7</p>
      <ol>
        <todo-item v-for="item in groceryList" v-bind:todo="item"></todo-item>
      </ol>
    </div>
  </div>
</section>


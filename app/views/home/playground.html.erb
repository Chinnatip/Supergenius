<script type="text/javascript">

  var app = new Vue({
    el: '#app-1',
    data: {
      message: 'This is Vue element!'
    }
  });
  var app2 = new Vue({
    el: '#app-2',
    data: {
      message: 'Loaded on : ' + new Date()
    }
  });
  var app3 = new Vue({
    el: '#app-3',
    data:{
      seen: true,
      message: 'Now you see me!'
    }
  });
  var app4 = new Vue({
    el: '#app-4',
    data:{
      todos: [
        {text: 'this is first elment in array' , header: 'EXAMPLE4.1'},
        {text: 'this is first 2nd in array', header: 'EXAMPLE4.2'},
        {text: 'this is first 3rd in array', header: 'EXAMPLE4.3'},
      ]
    }
  });
  var app5 = new Vue({
    el: '#app-5',
    data: {
      message: 'EXAMPLE5'
    },
    methods: {
      reverseText: function(){
        this.message = this.message.split('').reverse().join('')
      }
    }
  });
  var app6 = new Vue({
    el: '#app-6',
    data: {
      message: 'EXAMPLE6'
    }
  });

  Vue.component('todo-item', {
  props: ['todo'],
  template: '<li>{{ todo.text }}</li>'
})
var app7 = new Vue({
  el: '#app-7',
  data: {
    groceryList: [
      { text: 'Vegetables' },
      { text: 'Cheese' },
      { text: 'Whatever else humans are supposed to eat' }
    ]
  }
})
</script>

<%= form_for(addcourse) do |f| %>
  <% if addcourse.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(addcourse.errors.count, "error") %> prohibited this addcourse from being saved:</h2>

      <ul>
      <% addcourse.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <!-- <%= f.label :course %> -->
    <label for="course">คอร์สที่นัดเพิ่ม</label>
    <!-- <%= f.text_field :course %> -->
    <select class="" name="addcourse[course]">
      <% Course.all.each do |cs| %>
        <option
          value="<%= cs[:session_id] %>"
          <% if @course == cs[:session_id] %>selected<% end %>
          >
          <%= cs[:name] %>
        </option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <!-- <%= f.label :type %> -->
    <label for="type">ประเภทของนัด</label>
    <!-- <%= f.text_field :type %> -->
    <select class="" name="addcourse[add_type]">
      <% @type_lists.each do |tl| %>
        <option
          value="<%= tl[:v] %>"
          <% if @type == tl[:v] %>selected<% end %>
          >
          <%= tl[:t] %>
        </option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <!-- <%= f.label :desc %> -->
    <label for="desc">รายละเอียดของนัด</label>
    <%= f.text_area :desc , class: 'textarea-for-cms text-area' %>
  </div>

  <div class="actions">
    <%= link_to 'Back', addcourses_path , class: 'btn btn-grey' %>
    <span class="mar-10"></span>

    <% if controller.action_name == 'edit' %>
      <%= link_to 'Show', @addcourse ,class: 'btn-grey'%>
      <span class="mar-10"></span>
    <% end %>

    <input type="submit" value="Submit" class="btn btn-redder">
  </div>
<% end %>
